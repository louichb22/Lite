<div class="slideshow">

  {% for block in section.blocks %}
    <div class="slideshow_item fade">
      <a href="{{ block.settings.link }}">
        <div style="background-image:url('{{ block.settings.image | image_url }}')" class="slideshow_item_container">
          <h2 class="slideshow_text" style="color:{{ block.settings.text_color }}">{{ block.settings.text }}</h2>
        </div>
      </a>
    </div>
  {% endfor %}

  <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
  <a class="next" onclick="plusSlides(1)">&#10095;</a>
</div>

{% schema %}
  {
    "name": "Slideshow",
    "settings": [],
    "blocks": [
      {
        "name": "Slide",
        "type": "slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "text",
            "label": "Texte"
          },
          {
            "type": "color",
            "id": "text_color",
            "label": "Couleur du texte",
            "default": "#fff"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Lien"
          }
        ]
     }
  ],
    "presets": [
      {
        "name": "Slideshow"
      }
    ]
  }
{% endschema %}

