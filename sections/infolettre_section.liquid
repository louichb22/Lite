<div style="background-color:{{ section.settings.bg }}">
  <div class="section_container_fullwidth container_800 centered_text">
    <h2 class="section_title_noarrow" style="margin-bottom:0px; line-height:1; color:{{ section.settings.text_color }}">{{ section.settings.section_title }}</h2>
    <h6 class="section_subtitle" style="margin-bottom:25px; color:{{ section.settings.text_color }}">{{ section.settings.section_subtitle }}</h6>
    <p class="section_text" style="color:{{ section.settings.text_color }}">{{ section.settings.section_text }}</p>
    <div style="max-width:{{ section.settings.infolettre_width }}">{{ section.settings.infolettre }}</div>
  </div>
</div>

{% schema %}
  {
    "name": "Infolettre",
    "settings": [
      {
        "type": "color",
        "id": "bg",
        "label": "Couleur de fond",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Couleur du texte",
        "default": "#000000"
      },
      {
        "type": "text",
        "id": "section_title",
        "label": "Titre de section"
      },
      {
        "type": "text",
        "id": "section_subtitle",
        "label": "Sous-titre de section"
      },
      {
        "type": "textarea",
        "id": "section_text",
        "label": "Texte de section"
      },
      {
        "type": "range",
        "id": "infolettre_width",
        "min": 100,
        "max": 800,
        "step": 50,
        "unit": "px",
        "label": "Largeur de l'infolettre",
        "default": 200
      },
      {
        "type": "textarea",
        "id": "infolettre",
        "label": "Code infolettre"
      }
    ],
    "presets": [
      {
        "name": "Infolettre"
      }
    ]
  }
{% endschema %}