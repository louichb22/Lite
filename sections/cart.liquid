<div style="background-color:{{ section.settings.bg }}">
  <div class="section_container_1200">
    <h1 class="section_title_noarrow" style="color:{{ section.settings.color }}">{{ section.settings.cart_header }}</h1>
    <div class="cart_items_container">
      {% for line_item in cart.items %}
        <span>{{ line_item.title }} - x{{ line_item.quantity }} - {{ line_item.final_price | money }}</span>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Section name",
    "settings": [
      {
        "type": "color",
        "id": "bg",
        "label": "Couleur de fond",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "color",
        "label": "Couleur d'accent",
        "default": "#000000"
      },
      {
        "type": "text",
        "id": "cart_header",
        "label": "Titre de la page",
        "default": "Votre panier d'achat"
      }
    ]
  }
{% endschema %}