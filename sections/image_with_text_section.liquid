<div style="background-color:{{ section.settings.bg }}">
  <div class="section_container_1200 grid" style="grid-template-columns:{{ section.settings.grid_layout }}% {{ 100 | minus: section.settings.grid_layout }}%">
    <div style="grid-column:{% if section.settings.grid_inverted %}2{% else %}1{% endif %}; grid-row:1">
      <h2 class="section_title_noarrow" style="margin-bottom:0px; line-height:1; color:{{ section.settings.text_color }}">{{ section.settings.section_title }}</h2>
      <h6 class="section_subtitle" style="margin-bottom:25px; color:{{ section.settings.text_color }}">{{ section.settings.section_subtitle }}</h6>
      <p class="section_text" style="color:{{ section.settings.text_color }}">{{ section.settings.section_text }}</p>
      {% if section.settings.button_text != blank %}<div class="main_btn centered_btn" style="margin-top:50px; margin-bottom:70px;"><a href="{{ section.settings.button_link }}"><span class="main_btn_text text_section_button">{{ section.settings.button_text }}</span></a></div>{% endif %}
    </div>
    <div style="grid-column:{% if section.settings.grid_inverted %}1{% else %}2{% endif %}; grid-row:1">
      <img class="image_with_text_section_image" style="width:100%" src="{{ section.settings.image | image_url }}">
    </div>
  </div>
</div>

<style>
  .text_section_button{
    color: {{ section.settings.button_text_color }};
    background-color: {{ section.settings.button_color }};
  }
  .text_section_button:hover{
    color: {{ section.settings.button_text_color_hover }};
    background-color: {{ section.settings.button_color_hover }};
  }
</style>

