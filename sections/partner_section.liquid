<div style="background-color:{{ section.settings.bg }}">
  <div class="section_container_fullwidth container_800 centered_text" style="padding-bottom:20px;">
    {% if section.settings.section_title != blank -%}
      <h2
        class="section_title_noarrow"
        style="margin-bottom:0px; line-height:1; color:{{ section.settings.text_color }}"
      >
        {{ section.settings.section_title }}
      </h2>
    {%- endif %}
    {% if section.settings.section_subtitle != blank -%}
      <h6 class="section_subtitle" style="margin-bottom:25px; color:{{ section.settings.text_color }}">
        {{ section.settings.section_subtitle }}
      </h6>
    {%- endif %}
    {% if section.settings.section_text != blank -%}
      <p class="section_text" style="color:{{ section.settings.text_color }}">{{ section.settings.section_text }}</p>
    {%- endif %}
  </div>
  <div class="section_container_{% if section.settings.logo_contained %}1200{% else %}fullwidth{% endif %}" style="background-color:{{ section.settings.bg_logo }}">
    <div class="partner_logo_container">
      {% for block in section.blocks %}
        <a href="{{ block.settings.link }}">
        <div class="partner_logo_item">
          <img src="{{ block.settings.logo}}">
        </div>
        </a>
      {% endfor %}
    </div>
  </div>
  <div class="section_container_fullwidth">
  </div>
</div>

{% schema %}
{
  "name": "Partenaires",
  "settings": [
    {
      "type": "color",
      "id": "bg",
      "label": "Couleur de fond",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Couleur du texte",
      "default": "#000000"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Titre de section"
    },
    {
      "type": "text",
      "id": "section_subtitle",
      "label": "Sous-titre de section"
    },
    {
      "type": "textarea",
      "id": "section_text",
      "label": "Texte de section"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texte du bouton",
      "default": "Bouton"
    },
    {
      "type": "header",
      "content": "Section des logos"
    },
    {
      "type": "color",
      "id": "bg_logo",
      "label": "Couleur de fond",
      "default": "#ffffff"
    },
    {
      "type": "checkbox",
      "id": "logo_contained",
      "label": "Appliquer le conteneur",
      "default": false
    }
  ],
  "blocks": [
    {
      "name": "Logo",
      "type": "image",
      "settings": [
      {
        "type": "text",
        "id": "logo",
        "label": "Logo"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Lien"
      }
    ]
    }
  ],
  "presets": [
    {
      "name": "Partenaires"
    }
  ]
}
{% endschema %}
