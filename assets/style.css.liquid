* {
  all: unset;
}
p, span, a {
  font-family: articulat-cf, sans-serif;
  font-weight: 500;
  font-style: normal;
}
p {
  font-size: 14px;
}
h1, h2, h3, h4, h5, h6{
  font-family: articulat-heavy-cf, sans-serif;
  font-weight: 900;
  font-style: normal;
}
a {
  text-decoration: none;
  transition: all 0.3s;
  -webkit-transition: all 0.3s;
}
a:hover {
  cursor: pointer;
  text-decoration: none;
}
body {
  margin: 0;
}
.container{
  box-sizing: border-box;
  padding-left: 10px;
  padding-right: 10px;
}
.container_800{
  max-width:800px;
  margin:0 auto;
}
.section_container_fullwidth{
  padding-top:50px;
  padding-bottom:50px;
}
.section_container_1200{
  max-width:1200px;
  margin-left: auto;
  margin-right: auto;
  padding-top:50px;
  padding-bottom:50px;
  padding-left: 10px;
  padding-right: 10px;
}
.header_top {
  max-width: 1200px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: 50% 50%;
}
.header_top_left {
  grid-column: 1;
}
.header_top_right {
  grid-column: 2;
  display: flex;
  align-items: center;
}
.header_top_linklist {
  display: flex;
  padding: 14px 0;
}
.header_top_text {
  font-size: 12px;
  padding-right: 12px;
  line-height: 14px;
}
.header_top_linklist .header_top_text:not(:first-child) {
  padding-left: 12px;
  border-left: solid 1.5px #0F2B55;
}
.header_top_text:hover {
  color: black;
}
.blue {
  color: #0F2B55;
}
.header_top_button {
  background-color: black;
  border: none;
  color: white;
  padding: 8px 24px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 12px;
  font-weight: 400;
  margin-left: auto;
}
.header_top_button:hover {
  background-color: white;
  color: black;
  box-shadow: 0 0 0 2px black inset;
}
.header {
  max-width: 1200px;
  margin: 0 auto;
  background-color: #0F2B55;
  display: grid;
  grid-template-columns: 40% 20% 40%;
}
.header_searchbar {
  grid-column: 1;
}
.header_logo_container {
  grid-column: 2;
  display: flex;
  height: 85px;
  margin: 20px 0;
  align-items: center;
  object-fit: contain;
  justify-content: center;
}
.header_left {
  grid-column: 1;
  display: flex;
  align-items: center;
}
.header_searchbar {
  padding-left: 40px;
}
.header_right {
  grid-column: 3;
  display: flex;
  align-items: center;
}
.header_cart_container {
  display: flex;
  align-items: center;
  color: white;
}
.header_cart_link {
  margin-left: auto;
  padding-right: 40px;
}
.header_cart_amount {
  font-size: 16px;
  padding-right: 8px;
  padding-bottom: 2px;
}
.header_cart_icon {
  fill: white;
  transition: all 0.3s;
}
.header_cart_icon:hover {
  fill: black;
}
.header_account {
  padding-right: 40px;
  fill: white;
  transition: all 0.3s;
}
.header_account:hover {
  fill: #0c0c0c;
}
.searchbar_styling {
  display: flex;
  width: 200px;
  height: 30px;
  border-radius: 15px;
  background-color: white;
  text-decoration: none;
  align-items: center;
}
.searchbar_bar {
  display: flex;
  background: none;
  border: none;
  text-decoration: none;
  font-size: 12px;
  font-weight: 700;
  width: 145px;
  margin: 0 0 0 20px !important;
  padding: 0;
}
.searchbar_button {
  display: flex;
  background: none;
  border: none;
  text-decoration: none;
  width: 20px;
  margin: 0 20px !important 0 0;
  padding: 0;
  cursor: pointer;
}
.header_menu{
  max-width:1200px;
  margin-left:auto;
  margin-right:auto;
  height:60px;
  display: flex;
  align-items:center;
  justify-content:center;
  gap:60px;
}
.header_menu_item{
  font-size:16px;
  font-weight:700;
  color:#0F2B55;
  transition: all 0.3s;
}
.header_menu_item:hover{
  color:black;
}
.header_menu_item.has_children::after{
  content: "â–¾";
  margin-left:6px;
}
.header_menu_item.active::after{
  display:block;
  content: '';
  width:100%;
  height: 2px;
  border-radius:1px;
  background-color:#0F2B55;
}
.footer{
  max-width:1200px;
  margin-left:auto;
  margin-right:auto;
  display:grid;
  grid-template-columns:20% 60% 20%;
  align-items:center;
  background-color:#0F2B55;
  padding:60px;
  box-sizing: border-box;
}
.footer_left{
  display:block;
  text-align:left;
}
.footer_info_item{
  display:flex;
  color:white;
  gap:10px;
  margin-top:25px;
}
.footer_text{
  font-size: 12px;
  color:white;
  transition: all 0.3s;
}
a .footer_text:hover{
  color:black;
}
.footer_middle{
  align-items:center;
  text-align:center;
  margin-left:80px;
  margin-right:80px;
}
.footer_right{
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:end;
}
.strong{
  font-weight: 600;
}
.footer_menu_item{
  font-size: 12px;
  color:white;
  transition: all 0.3s;
  margin-bottom:5px;
}
.footer_menu_item:hover{
  color:black;
}
.footer_bot{
  max-width: 1200px;
  margin-left: auto;
  margin-right: auto;
  display:flex;
  justify-content:space-between;
  align-items:center;
  height:50px;
}
.footer_bot_text{
  font-size: 12px;
  color:#0F2B55;
}
.footer_bot_link{
  color:#0F2B55;
  transition: all 0.3s;
}
.footer_bot_link:hover{
  color:black;
}
.image_section{
  height:400px;
  background-size: cover;
  background-position: 0% 70%;
  display:flex;
  justify-content:center;
  align-items:center;
}
.image_section_title{
  font-size:84px;
  color:white;
  text-align:center;
  line-height:0.9;
}

.slideshow {
  max-width: 1200px;
  position: relative;
  margin-left: auto;
  margin-right: auto;
}
.slideshow_item {
  display: none;
}
.prev, .next {
  cursor: pointer;
  position: absolute;
  top: 50%;
  width: 30px;
  height: 30px;
  margin-top: -15px;
  color: white;
  background-color: #0F2B55;
  font-weight: bold;
  font-size: 20px;
  transition: all 0.3s;
  border-radius: 15px;
  user-select: none;
  text-align: center;
}
.next {
  right: 0;
  border-radius: 15px;
  margin-right: -15px;
}
.prev{
  margin-left: -15px;
}
.prev:hover, .next:hover {
  background-color: black;
}
.dot {
  cursor: pointer;
  height: 15px;
  width: 15px;
  margin: 0 2px;
  background-color: #bbb;
  border-radius: 50%;
  display: inline-block;
  transition: background-color 0.3s;
}
.active_slide{
  display:block;
  animation-name: translate-in;
  animation-duration: 0.5s;
}
.inactive_slide{
  display:none;
  animation-name: translate-out;
  animation-duration: 0.5s;
}
@keyframes translate-in {
  from {transform: translateX(-100%);} 
  to {transform: translateX(0%);}
}
@keyframes translate-out {
  from {transform: translateX(0%);} 
  to {transform: translateX(100%);}
}
.slideshow_item_container{
  aspect-ratio: 3.4 / 1;
  width:100%;
  object-fit: cover;
  background-size: cover;
  background-position: center;
  display:flex;
  justify-content:center;
  align-items:center;
}
.slideshow_text{
  font-size: 52px;
  font-family: articulat-heavy-cf, sans-serif;
  font-weight: 900;
  font-style: normal;
}

