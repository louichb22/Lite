/* SECTIONS */

.image_section{
  height:400px;
  background-size: cover;
  background-position: 50% 50%;
  display:flex;
  justify-content:center;
  align-items:center;
}
.image_section_title{
  font-size:84px;
  color:white;
  text-align:center;
  line-height:0.9;
}

.slideshow {
  max-width: 1200px;
  position: relative;
  margin-left: auto;
  margin-right: auto;
}
.slideshow_item {
  display: none;
}
.prev, .next {
  cursor: pointer;
  position: absolute;
  top: 50%;
  width: 30px;
  height: 30px;
  margin-top: -15px;
  color: white;
  background-color: #0F2B55;
  font-weight: bold;
  font-size: 20px;
  transition: all 0.3s;
  border-radius: 15px;
  user-select: none;
  text-align: center;
}
.next {
  right: 0;
  border-radius: 15px;
  margin-right: -15px;
}
.prev{
  margin-left: -15px;
}
.prev:hover, .next:hover {
  background-color: black;
}
.dot {
  cursor: pointer;
  height: 15px;
  width: 15px;
  margin: 0 2px;
  background-color: #bbb;
  border-radius: 50%;
  display: inline-block;
  transition: background-color 0.3s;
}
.active_slide{
  display:block;
  animation-name: translate-in;
  animation-duration: 0.5s;
}
.inactive_slide{
  display:none;
  animation-name: translate-out;
  animation-duration: 0.5s;
}
@keyframes translate-in {
  from {transform: translateX(-100%);} 
  to {transform: translateX(0%);}
}
@keyframes translate-out {
  from {transform: translateX(0%);} 
  to {transform: translateX(100%);}
}
.slideshow_item_container{
  aspect-ratio: 3.4 / 1;
  width:100%;
