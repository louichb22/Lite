.header_menu{
  max-width:1200px;
  margin-left:auto;
  margin-right:auto;
  height:60px;
  display: flex;
  align-items:center;
  justify-content:center;
  gap:60px;
}
.header_menu_item{
  font-size:16px;
  font-weight:700;
  color:#0F2B55;
  transition: all 0.3s;
}
.header_menu_item:hover{
  color:black;
}
.header_menu_item.has_children::after{
  content: "â–¾";
  margin-left:6px;
}
.header_menu_item.active::after{
  display:block;
  content: '';
  width:100%;
  height: 2px;
  border-radius:1px;
  background-color:#0F2B55;
