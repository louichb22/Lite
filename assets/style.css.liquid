body {
  margin: 0;
  padding: 0;
}
.header_top {
  max-width: 1200px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: 50% 50%;
}
.header_top_left {
  grid-column: 1;
}
.header_top_right {
  grid-column: 2;
  display: flex;
  align-items: center;
}
.header_top_linklist {
  display: flex;
  padding: 14px 0;
}
.header_top_text {
  font-size: 14px;
  font-family: articulat-cf, sans-serif;
  font-weight: 400;
  font-style: normal;
  text-decoration: none;
  padding-right: 10px;
  line-height: 20px;
}
.header_top_linklist .header_top_text:not(:first-child) {
  padding-left: 10px;
  border-left: solid 1.5px #0F2B55;
}
.header_top_text:hover {
  color: grey;
}
.blue {
  color: #0F2B55;
}
.header_top_button {
  background-color: black;
  border: none;
  color: white;
  padding: 8px 24px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 12px;
  font-weight: 400;
  margin-left: auto;
}
.header_top_button:hover {
  background-color: white;
  color: black;
  box-shadow: 0 0 0 2px black inset;
}