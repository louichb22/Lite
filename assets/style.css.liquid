}
.footer_middle{
  align-items:center;
  text-align:center;
  margin-left:80px;
  margin-right:80px;
}
.footer_right{
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:end;
}
.strong{
  font-weight: 600;
}
.footer_menu_item{
  font-size: 12px;
  color:white;
  transition: all 0.3s;
  margin-bottom:5px;
}
.footer_menu_item:hover{
