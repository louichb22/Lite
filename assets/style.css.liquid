/* GENERAL TEXT */

p, span, a {
  font-family: articulat-cf, sans-serif;
  font-weight: 500;
  font-style: normal;
}
p {
  font-size: 14px;
}
h1, h2, h3, h4, h5, h6{
  font-family: articulat-heavy-cf, sans-serif;
  font-weight: 900;
  font-style: normal;
}
a {
  text-decoration: none;
  transition: all 0.3s;
  -webkit-transition: all 0.3s;
}
a:hover {
  cursor: pointer;
  text-decoration: none;
}

/* GENERAL BODY */

body {
  margin: 0;
}

/* SECTION TYPES */

.container{
  box-sizing: border-box;
  padding-left: 10px;
  padding-right: 10px;
}
.container_800{
  max-width:800px;
  margin:0 auto;
}
.section_container_fullwidth{
  padding-top:50px;
  padding-bottom:50px;
}
.section_container_1200{
  max-width:1200px;
  margin-left: auto;
  margin-right: auto;
  padding-top:50px;
  padding-bottom:50px;
  padding-left: 10px;
  padding-right: 10px;
}

/* GENERAL SETTINGS */

.col2{
  display:grid;
  grid-template-columns:50% 50%;
}
.col3{
  display:grid;
  grid-template-columns:33% 33% 33%;
}
.col4{
  display:grid;
  grid-template-columns:25% 25% 25% 25%;
}
.col5{
  display:grid;
  grid-template-columns:20% 20% 20% 20% 20%;
}
.col6{
  display:grid;
  grid-template-columns:16% 16% 16% 16% 16% 16%;
}

/* HEADER */

.header_top {
  max-width: 1200px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: 50% 50%;
}
.header_top_left {
  grid-column: 1;
}
.header_top_right {
  grid-column: 2;
  display: flex;
  align-items: center;
}
.header_top_linklist {
  display: flex;
  padding: 14px 0;
}
.header_top_text {
  font-size: 12px;
  padding-right: 12px;
  line-height: 14px;
}
.header_top_linklist .header_top_text:not(:first-child) {
  padding-left: 12px;
  border-left: solid 1.5px #0F2B55;
}
.header_top_text:hover {
  color: black;
}
.blue {
  color: #0F2B55;
}
.header_top_button {
  background-color: black;
  border: none;
  color: white;
  padding: 8px 24px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 12px;
  font-weight: 400;
  margin-left: auto;
}
.header_top_button:hover {
  background-color: white;
  color: black;
  box-shadow: 0 0 0 2px black inset;
}
.header {
  max-width: 1200px;
  margin: 0 auto;
  background-color: #0F2B55;
  display: grid;
  grid-template-columns: 40% 20% 40%;
}
