  display: flex;
  height: 85px;
  margin: 20px 0;
  align-items: center;
  object-fit: contain;
  justify-content: center;
}
.header_left {
  grid-column: 1;
  display: flex;
  align-items: center;
}
.header_searchbar {
  padding-left: 40px;
}
.header_right {
  grid-column: 3;
  display: flex;
  align-items: center;
}
.header_cart_container {
  display: flex;
  align-items: center;
  color: white;
}
.header_cart_link {
